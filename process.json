{
    "apps": [
        {
            "name": "node-api",
            "script": "npm",
            "args": "start",
            "ignore_watch": [
                "node_modules",
                "generators",
                ".vscode"
            ],
            "log_date_format": "YYYY-MM-DD HH:mm Z",
            "error_file": "./logs/error.log",
            "out_file": "./logs/outlog.log",
            "combine_logs": true,
            "merge_logs": true,
            "time": true
        }
    ]
}